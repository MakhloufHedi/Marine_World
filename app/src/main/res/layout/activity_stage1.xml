<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstpage"
    tools:context=".StageActivity1">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304">

        <ImageView
            android:id="@+id/back_button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/icon_game"/>


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_button1"
            android:layout_marginTop="20dp"
            android:textAlignment="center"

            android:textSize="30sp" />


        <ImageView
            android:id="@+id/stage_one"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/text"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-65dp"
            android:elevation="10dp"
            android:src="@drawable/stage1" />

        <ImageView
            android:id="@+id/stage_two"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/stage_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="10dp"
            android:src="@drawable/stage2" />

        <ImageView
            android:id="@+id/stage_three"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/stage_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="10dp"
            android:src="@drawable/stage3" />

    </RelativeLayout>

</RelativeLayout>

