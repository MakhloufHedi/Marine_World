<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity1">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/foody_fish_background"
        />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304">

        <ImageView
            android:id="@+id/back_button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_button"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            />


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/watergalon"
            android:text="@string/choose_your_difficulty"
            android:textAlignment="center"
            android:textColor="@color/text_orange"
            android:layout_below="@id/back_button1"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/level1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:layout_below="@+id/text"
            android:elevation="10dp"
            android:src="@drawable/easy_level" />

        <ImageView
            android:id="@+id/level2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/level1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="10dp"
            android:src="@drawable/medium_level" />

        <ImageView
            android:id="@+id/level3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/level2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="10dp"
            android:src="@drawable/hard_level" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>